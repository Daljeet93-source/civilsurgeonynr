<%- include('../partials/top') %>
    <!-- Preloader Starts -->
    <div class="preloader">
        <div class="spinner"></div>
    </div>
    <!-- Preloader End -->

   <%- include ('../partials/header') %>

    <!-- Banner Area Starts -->
    <%- include ('./banner') %>
    <!-- Banner Area End -->


       
    

    <!-- Welcome Area Starts -->
    <section class="welcome-area section-padding">
        <div class="container">
            
        <div class="row">
                <div class="col-lg-5 align-self-center">
                    <div class="welcome-img">
                        <img src="public/images/welcome.png" alt="">
                    </div>
                </div>
                <div class="col-lg-7">
                    <div class="welcome-text mt-5 mt-lg-0">
                        <div class="appointment-form text-center mt-5 mt-lg-0">
                            <h3 class="mb-5">SignIn</h3>
                            <% if (errorMessage) { %>
                                <p class="text-danger small border-0 pl-2 pr-2 rounded" ><%= errorMessage %></p>
                            <% } %>
                            <form action="/signin" method="POST">
                                <div class="form-group">
                                    <input type="email" placeholder="Enter Email" name="email" class="form-control border" required>
                                </div>
                                <div class="form-group">
                                    <input type="password" placeholder="Enter Password" name="password" class="form-control border" required>
                                </div>

                                <button type="submit" class="template-btn border-0 " style="cursor:pointer;">Sign in</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

  
   
    
    <%- include('../partials/footer') %>

    <!-- Javascript -->
    <script src="public/js/vendor/jquery-2.2.4.min.js"></script>
	<script src="public/js/vendor/bootstrap-4.1.3.min.js"></script>
    <script src="public/js/vendor/wow.min.js"></script>
    <script src="public/js/vendor/owl-carousel.min.js"></script>
    <script src="public/js/vendor/jquery.datetimepicker.full.min.js"></script>
    <script src="public/js/vendor/jquery.nice-select.min.js"></script>
    <script src="public/js/vendor/superfish.min.js"></script>
    <script src="public/js/main.js"></script>



<%- include('../partials/bottom') %>