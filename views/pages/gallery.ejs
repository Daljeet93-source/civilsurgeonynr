        <div class="spinner"></div>
    </div>
    <!-- Preloader End -->

<%- include('../partials/header') %>
  

<!-- Banner Area Starts -->
<%- include ('./banner') %>

<!-- Banner Area End -->

   


    <!-- Contact Form Starts -->
    <section class="contact-form section-padding3">
        <div class="container">
            <div class="row ">

                <div class="col-12 ">
                    
                    <% if (gallery.length > 0) { %>
                        <div class="gallery">

                        
                        <% for (let i=0; i< gallery.length; i++) { %>

                                <div class="col-12 col-sm-6 mt-2 mb-2 col-md-4 ">
                                    <a href="/gallery-details/<%= gallery[i]._id %>">
    
                                    <div class="card">
                                        <div class="card-body">
                                            <h4 class="text-center"><%= gallery[i].title %></h4>
                                            <img class="w-100" src="<%= gallery[i].image %>" height="150" >
                                            <p> <%= gallery[i].desc.length > 30 ?  gallery[i].desc.slice(0,30) + '...' : gallery[i].desc  %></p>
                                        </div>
    
                                    </div>
                                </a>
    
                                </div>
                            <% } %>
                        </div>
                        <% if(gallery.length > 8) {  %>
                       <div class="text-center load-more" style="position: absolute; bottom: 10px; width: 100%;" >
                            load more
                       </div>
                       <%} %>
                    <% }  else {%>
                        <div class="text-center col-12" style="height: 200px;">Nothing To show Anything Yet!</div>
                    <% } %>
                </div>
                
                
                  
            </div>
        </div>
    </section>
    <!-- Contact Form End -->


    <%- include('../partials/footer') %>
    
    <script>
        jQuery(() => {
            var loaded = 10;
            $('.load-more').on('click', () => {
                $.ajax({
                type: "POST",
                url: '/get-gallery',
                data: {
                    skip: loaded
                },
                success: function (data) {
                    if(data.data.length > 0) {
                        loaded = loaded + data.data.length
                    
                        let col = `
                        <div class="col-12 col-sm-6 mt-2 mb-2 col-md-4 ">
                                    <a href="/gallery-details/${data.data[i]._id}">
    
                                    <div class="card">
                                        <div class="card-body">
                                            <h4 class="text-center">${data.data[i].title}</h4>
                                            <img class="w-100" src="${data.data[i].image}" height="150" >
                                            <p> ${data.data[i].desc.length > 30 ?  data.data[i].desc.slice(0,30) + '...' : data.data[i].desc} </p>
                                        </div>
    
                                    </div>
                                </a>
                            </div>
                        `
                    }
                    



                },
                error: function (data) {
                    console.log(data)
                }
            })
            })
        })
    </script>


